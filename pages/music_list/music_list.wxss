/* pages/music_list/music_list.wxss */
.container{
  display: flex;
  flex: row;
}

.header{
  width: 100%;
  height: 360rpx; 
  background-color: #d43c33;
  display: flex;
  flex-direction: row;
}

.coverImg{
  margin-left: 40rpx;
  margin-top: 40rpx;
  width: 240rpx;
  height: 240rpx;
}

.album-description{
  display: flex;
  flex-direction: column;
}

.album-name{
  font-size: 40rpx;
  margin-left: 40rpx;
  margin-top: 40rpx;
  width:400rpx;
  height: 100rpx;
  color: white;
}

.album-creator{
  margin-left: 40rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
}

.creator-avatar{
  border-radius: 100%;
  width:60rpx;
  height: 60rpx;
}

.creator-name{
  font-size: 26rpx;
  width: 200rpx;
  margin-left: 20rpx;
  color: white;
  justify-content: center;
}


.desc{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #CFCFCF;
  padding-top:20rpx;
  padding-bottom:20rpx
}


.music-list{
  display: flex;
  flex-direction: column;
}

.music-sheet{
  display: flex;
  flex-direction: row;
}



.music-num{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100rpx;
  height:100rpx;
  /* background-color: black; */
}

.position{
  padding-left: 36%;
  font-size: 36rpx;
  color: grey;
}

.music-detail{
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #CFCFCF;
}

.music-name{
  font-size: 34rpx;
}

.music-desc{
  display: flex;
  flex-direction: row;
}

.music-singer{
  font-size: 24rpx;
  color: #A3A3A3;
}