/* pages/music_list/music_list.wxss */
.container{
  display: flex;
  flex: row;
}

.header{
  width: 100%;
  height: 180px; 
  background-color: #d43c33;
  display: flex;
  flex-direction: row;
}

.coverImg{
  margin-left: 20px;
  margin-top: 20px;
  width: 120px;
  height: 120px;
}

.album-description{
  display: flex;
  flex-direction: column;
}

.album-name{
  font-size: 20px;
  margin-left: 20px;
  margin-top: 20px;
  width:200px;
  height: 50px;
  color: white;
}

.album-creator{
  margin-left: 20px;
  margin-top: 20px;
  display: flex;
  flex-direction: row;
}

.creator-avatar{
  border-radius: 100%;
  width:30px;
  height: 30px;
}

.creator-name{
  font-size: 13px;
  width: 100px;
  margin-left: 10px;
  color: white;
  justify-content: center;
}


.desc{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #CFCFCF;
  padding-top:10px;
  padding-bottom:10px
}


.music-list{
  display: flex;
  flex-direction: column;
}

.music-sheet{
  display: flex;
  flex-direction: row;
}



.music-num{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 50px;
  height:50px;
  /* background-color: black; */
}

.position{
  padding-left: 36%;
  font-size: 18px;
  color: grey;
}

.music-detail{
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #CFCFCF;
}

.music-name{
  font-size: 17px;
}

.music-desc{
  display: flex;
  flex-direction: row;
}

.music-singer{
  font-size: 12px;
  color: #A3A3A3

}