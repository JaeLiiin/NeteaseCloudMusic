<!--index.wxml-->
<view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">



                <view class="weui-tab__content" hidden="{{activeIndex != 0}}" display = 'flex'>
                  <swiper indicator-dots='true' indicator-color='#000000' indicator-active-color='#d43c33' circular='true' autoplay='true' >
                    <view wx:for="{{imageurls}}" wx:for-item = "i">
                      <swiper-item>
                        <view><image></image></view>
                      </swiper-item>
                    </view>
                   </swiper>       <!--swiper组件实现滚动 -->



                  <view class='recommand_win'>
                    <view class='recommand_win_2' style='justify-content:center' catchtap='onclick_1'>
                      <text class='iconfont icon-jian' style='color:#d43c33;font-size:40px'></text>
                      <text style='font-size:17px'>每日推荐</text>
                    </view>

                    <view class='recommand_win_2' catchtap='onclick_2'>
                      <text class='iconfont icon-resou-copy' style='color:#d43c33;font-size:40px'></text>
                      <text style='font-size:17px'>热搜排行</text>
                    </view>

                     <view class='recommand_win_2' catchtap='onclick_3'>
                      <text class='iconfont icon-fm' style='color:#d43c33;font-size:40px'></text>
                      <text style='font-size:17px'>私人FM</text>
                    </view>
                  </view>     <!--view组件实现每日推荐等 -->







                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">选项二的内容</view>
                <view class="weui-tab__content" hidden="{{activeIndex != 2}}">选项三的内容</view>
            </view>
 </view>