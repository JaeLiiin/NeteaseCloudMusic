  padding: 5px;
  padding-right: 15px;
  display: flex;
  flex-direciton:row;
}

.songsheet-avatar{
  width: 80px;
  height: 60px;
}

.songsheet-description{
  display: flex;
  flex-direction: column;
  /* width: 100%;  */
